<vcss>
  <!--
   Each <vcs> has a name atribute (name of vcs used) and a path attribute. 
   -->
  
  <vcs 
    name="svn"
    path="/usr/local/bin"

    <commands>
      <command no="VCS_COMMIT"> commit </command>
      <command no="VCS_LOG"> log </command>
    </commands>
  </vcs>
  
  <vcs 
    name="git"
    path="/usr/local/bin"

    <commands>
      <command no="VCS_COMMIT"> commit </command>
      <command no="VCS_LOG"> log </command>
    </commands>
  </vcs>
  
</vcss>
