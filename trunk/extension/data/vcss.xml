<vcss>
  <!--
   Each <vcs> has a name atribute (name of vcs used), and
   a number of <commands>. 
   Each <vcs> can also have a keyword-expansion attribute.
   Each <command> will be a menu item, the attribute type indicates
   how this item will be used, if type is popup the item is only
   on the popup menu, if type is main, the item is only on the
   main menu, if not given, both on popup and main menu. 
   Default accelerator is first char of the command, 
   but you can set it everywhere using an & char.
   Each <command> can also have a submenu attribute, in which case
   it is shown as a submenu using the name as specified.
   -->
  
  <vcs 
    name="svn"
    keyword-expansion="true">

    <commands>
      <command> add </command>
      <command> blame </command>
      <command> cat </command>
      <command> commit </command>
      <command> diff </command>
      <command type = "main"> help </command>
      <command> info </command>
      <command> log </command>
      <command type = "main"> ls </command>
      <command type = "popup"> proplist </command>
      <command type = "popup"> propset </command>
      <command> revert </command>
      <command> stat </command>
      <command> update </command>
    </commands>
  </vcs>
  
  <vcs 
    name="git">

    <commands>
      <command> add </command>
      <command> blame </command>
      <command> commit </command>
      <command> diff </command>
      <command type = "main"> help </command>
      <command> log </command>
      <command> push </command>
      <command> revert </command>
      <command> show </command>
      <command> status </command>
      <command> update </command>
      <command submenu = "svn"> rebase </command>
      <command submenu = "svn"> dcommit </command>
      <command submenu = "svn"> blame </command>
      <command submenu = "svn"> help </command>
    </commands>
  </vcs>

  <vcs 
    name="cvs">

    <commands>
      <command> add </command>
      <command> co </command>
    </commands>
  </vcs>
  
</vcss>
